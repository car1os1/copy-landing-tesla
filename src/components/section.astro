---
const { color, title, subtitle } = Astro.props;
const textColor = `text-${color}`;
---

<section
    class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
    data-header-color={color}
>
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class={`${textColor} pt-40 text-4xl font-medium`}>
                {title}
            </h2>

            <p class={`${textColor} text-sm pt-5`}>
                {subtitle}
            </p>
        </header>
        <footer class="flex flex-col flex-grow justify-end pb-24">
            <slot name="footer" />
        </footer>
    </div>

    <div class="absolute top-0 bottom-0 h-full z-10">
        <slot name="background" />
    </div>
</section>
